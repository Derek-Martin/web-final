//- We need two bools passed in for the nav buttons
//- admin
//- loggedIn
html
    head
        title="Web Final"
        link(href="styles/style.css" rel="stylesheet" type="text/css")
        script(src = "/scripts/layout.js")
    body(class = "body")
        nav
            button(class="nav-button" onclick="redirect('')")="Home"
            if(loggedIn)
                button(class="nav-button" onclick="redirect('profile')")="Profile"
            if(admin)
                button(class="nav-button" onclick="redirect('admin')")="Admin"
            
            div(class="right")
                if(loggedIn)
                    div(class="nav-username")="Welcome "+username
                    button(class="nav-button" onclick="redirect('logout')")="Logout"
                else
                    button(class="nav-button" onclick="redirect('login')")="Login"
                    button(class="nav-button" onclick="redirect('register')")="Register"
        div(class = "content")
            block content
    footer